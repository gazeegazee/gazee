<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product">

	<insert id="productRegister" parameterType="ProductVO">
		insert into product values(null, #{memberId},#{category},#{productName},#{productContent},#{price},#{dealDirect},null,null,#{dealDelivery},#{productViews},#{temporary})
	</insert>
	
	<select id="productDetail" resultType="ProductVO" parameterType="Integer">
		select * from product where product_id = #{productId}
	</select>
	
	<select id="all" resultType="ProductVO">
		select * from product	
	</select>

</mapper>











